<%# app/views/bravura_template_prime/shared/_top_nav.html.erb %>
<header class="navbar sticky z-20 h-16 bg-white/90 shadow-sm backdrop-blur-lg top-0 py-3">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between">
      <div class="shrink-0">
        <%= link_to root_url, class: 'logo flex items-center', data: { umami_event: 'Clicked Link: /', umami_href: '/' } do %>
          <% if @current_account&.settings_navigation&.logo&.attached? %>
            <%= image_tag(@current_account.settings_navigation.logo, alt: "Logo", class: "h-8 w-auto mr-1") %>
          <% else %>
            <%= image_tag('default_logo.png', alt: "Default Logo", class: "h-8 w-auto mr-1") %>
          <% end %>
          <span class="text-2xl font-bold tracking-tight text-secondary-900">
            <%= @presenter.get_setting('navigation.logo_text') %>
          </span>
        <% end %>
      </div>
      <div class="nav-links-wrapper-right flex items-center justify-end gap-3 lg:gap-4">
        <%= render partial: 'bravura_template_prime/shared/right_nav_links' %>
      </div>
    </div>
  </div>
</header>