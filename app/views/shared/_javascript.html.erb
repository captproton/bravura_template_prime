<%# app/views/bravura_template_prime/shared/_javascript.html.erb %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    var copyButton = document.querySelector('button[aria-label="Copy the Canonical link"]');
    if (copyButton) {
      copyButton.addEventListener('click', function() {
        var canonicalLink = this.getAttribute('data-canonical');
        navigator.clipboard.writeText(canonicalLink).then(function() {
          alert('Canonical link copied to clipboard');
        }).catch(function(err) {
          console.error('Failed to copy text: ', err);
        });
      });
    }
  });
</script>