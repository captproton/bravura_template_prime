<script>
	// This script is for copying the canonical link to the clipboard
	document.querySelector('button[aria-label="Copy the Canonical link"]').addEventListener('click', function() {
		var canonicalLink = this.getAttribute('data-canonical');
		var tempInput = document.createElement('input');
		tempInput.style = 'position: absolute; left: -1000px; top: -1000px';
		tempInput.value = canonicalLink;
		document.body.appendChild(tempInput);
		tempInput.select();
		document.execCommand('copy');
		document.body.removeChild(tempInput);
		alert('Canonical link copied to clipboard');
	});
</script>
