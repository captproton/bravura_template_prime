    <h2 class="text-xl font-bold text-secondary-900 sm:text-2xl">All articles</h2>
    <div class="relative grid grid-cols-1 items-start gap-16 mt-8 lg:grid-cols-12">
      <%= render 'bravura_template_prime/shared/categories_sidebar' %>
      <%= render 'bravura_template_prime/blog/articles_grid' %>
    </div>
  </div>
</section>

