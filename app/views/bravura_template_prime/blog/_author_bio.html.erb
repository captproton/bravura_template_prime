<div class="flex max-w-[var(--notion-max-width)] flex-col items-center mx-auto mt-8 border-t border-secondary-200 px-[calc(min(16px,8vw))] pt-8 sm:flex-row sm:items-start sm:mt-12 sm:pt-12">
    <%# FIXME: image_tag author.avatar_url doesn't work.  Is this the proper url? %>
  <%#= image_tag author.avatar_url, class: "h-24 w-24 shrink-0 overflow-hidden object-cover ring-1 ring-secondary-100 rounded-full", alt: author.name %>
  <%#  %>
  <%= link_to author_path(author), 
            class: "h-24 w-24 shrink-0 overflow-hidden object-cover ring-1 ring-secondary-100 rounded-full", 
            data: { umami_event: "Clicked Link: /#{author.name.parameterize}", umami_href: "/#{author.name.parameterize}" } do %>
          <%= image_tag avatar_url(author, 100), 
            alt: author.name,
            class: "inline-block h-16 w-16 flex-shrink-0 object-cover rounded-full lg:h-24 lg:w-24",
            srcset: "#{avatar_url(author, 480)} 480w, #{avatar_url(author, 800)} 800w, #{avatar_url(author, 1200)} 1200w",
            sizes: "(max-width: 599px) 480px, (max-width: 1199px) 800px, 1200px"
        %>
<% end %>

  <%#  %>
  <div class="mt-6 text-center sm:ml-6 sm:mt-0 sm:text-left">
    <div class="flex items-start justify-center sm:justify-between">
      <div>
        <p class="text-xs font-bold uppercase tracking-widest text-secondary-400">Written by</p>
        <h3 class="text-2xl font-bold text-secondary-900 mt-2"><%= link_to author.name, author_path(author) %></h3>
      </div>
    </div>
    
    <p class="text-base font-normal text-secondary-600 mt-3 sm:text-lg"><%= author.bio %></p>
    
    <div class="mt-4 flex justify-center sm:justify-start">
      <% if author.twitter_url.present? %>
        <%= link_to author.twitter_url, class: "text-secondary-500 hover:text-secondary-700", target: "_blank", rel: "noopener" do %>
          <%= inline_svg_tag 'icons/twitter.svg', class: "h-5 w-5" %>
        <% end %>
      <% end %>
      
      <% if author.linkedin_url.present? %>
        <%= link_to author.linkedin_url, class: "text-secondary-500 hover:text-secondary-700 ml-4", target: "_blank", rel: "noopener" do %>
          <%= inline_svg_tag 'icons/linkedin.svg', class: "h-5 w-5" %>
        <% end %>
      <% end %>
      
      <% if author.youtube_url.present? %>
        <%= link_to author.youtube_url, class: "text-secondary-500 hover:text-secondary-700 ml-4", target: "_blank", rel: "noopener" do %>
          <%= inline_svg_tag 'icons/youtube.svg', class: "h-5 w-5" %>
        <% end %>
      <% end %>
      
      <% if author.tiktok_url.present? %>
        <%= link_to author.tiktok_url, class: "text-secondary-500 hover:text-secondary-700 ml-4", target: "_blank", rel: "noopener" do %>
          <%= inline_svg_tag 'icons/tiktok.svg', class: "h-6 w-6" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>